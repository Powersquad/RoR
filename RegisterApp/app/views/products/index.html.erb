<%= button_to "Main Menu", main_menu_index_path, method: :get %>
<%= button_to "Create New", new_product_path, method: :get %>

<%= form_with(url: "/productListing/search", method: "get", local: true) do %>
  <%= label_tag(:searchCriteria, "Search for:") %>
  <%= text_field_tag(:searchCriteria) %>
  <%= submit_tag("Search") %>
<% end %>

<% @products.each do |product| %>
  <%= product.lookupCode %>
  <%= button_to "Show", product_path(product.lookupCode), method: :get %>
    
  <%= form_with(url: addItem_cart_index_path(lookupCode: product.lookupCode), method: "get", local: false) do |f| %>
   <%= f.hidden_field :lookupCode, :value => product.lookupCode %>
   <%= f.submit "Add Item" %>
  <% end %>
<% end %>