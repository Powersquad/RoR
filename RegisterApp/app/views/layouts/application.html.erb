<!DOCTYPE html>
<html>
  <head>
    <title>RegisterApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", media: "all", 'data-turbolinks-track': "reload" %>
    <%= javascript_pack_tag "application", 'data-turbolinks-track': "reload" %>
  </head>

  <body>
    <% if !!flash[:error] %>
      <p>ERROR: <%= flash[:error] %></p> 
    <% end %>
    <% if !!flash[:notice] %>
      <p>Info: <%= flash[:notice] %></p> 
    <% end %>
    <%= yield %>
  </body>
</html>
