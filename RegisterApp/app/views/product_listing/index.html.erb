<!DOCTYPE html>
<html>

<head>
    <title>Register - Products</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
    <div class="header">
        <h1 class="primary-message">Products Listing</h1>
    </div>

    <div id="main" class="main">


        <div class="productsWrapper">
            <%# <div>
                <a href="/productDetail/" class="button">Create New</a>
            </div> %>
            <br />
            <br />


            <% if !@products.empty? %>
                <ul id="productsListing" class="products">
                    <%# for each product print the id, lookup code, count, and createdOn %>
                    <% @products.each do |p| %>
                           <p>-----------------------------</p>
                           <p>Product ID: <%= p.lookupCode%> </p>
                           <p>Count: <%= p.count%> </p>
                           <p>Created On: <%= p.created_at%> </p>
                           <p>-----------------------------</p>
                    <% end %>
                </ul>
            <% end %>

        </div>

 
    </div>

</body>
</html>