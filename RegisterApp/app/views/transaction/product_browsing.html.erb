  LookupCode: <%= product.lookupCode %> <br>
  Price: <%= product.price %> <br> 
  <%= button_to "Add To Cart", addItem_cart_index_path(lookupCode: product.lookupCode), params: { lookupCode: product.lookupCode, original: "productAdd" }, method: :get, action: :addItem %>
